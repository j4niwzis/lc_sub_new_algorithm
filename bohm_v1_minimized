def A = \x.\y.(y (x x y));;
def Y = (A A);;

def T = \t.\f. (t);;
def F = \t.\f. (f);;

def pair = \a.\b.\c. (c a b);;

def second = \p. (p F);;

def stream = (Y \stream.(\f.\x.\c. (c (f x) (stream f (f x)))));;

def sub_init = \b.\f.\x.
  (pair x (b (pair x) (stream f x)));;

def sub = \a.\b.\f.\x.
  ((a second (sub_init b f x)) T);;
